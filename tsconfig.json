{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./", // Define o diret√≥rio base
    "paths": {
      "src/*": ["src/*"] // Mapeia `src/...` para `./src/...`
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
