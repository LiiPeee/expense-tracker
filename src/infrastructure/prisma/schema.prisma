// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id         String       @id @default(uuid())
  endDate    DateTime?
  createDate DateTime  @default(now())
  name       String
  email      String    @unique
  balance    Float
  token      String
  password   String
  transaction Transaction[] @relation("AccountTransaction")
}

model Transaction {
  id                     String         @id @default(uuid())
  createDate             DateTime        @default(now())
  endDate                DateTime?
  account                Account     @relation("AccountTransaction", fields: [accountId], references: [id])
  accountId              String
  value                  Float
  paymentName            String
  paid                   Boolean     @default(false)
  contact                Contact     @relation("ContactTransactions", fields: [contactId], references: [id])
  contactId              String
  comment                String?
  recurrence             Recurrence @default(M)
  number_of_installments Int?
  category               Category    @relation("CategoryTransaction", fields: [categoryId], references: [id])
  categoryId             String
  installments_date      DateTime?
}

model Contact {
  id           String           @id @default(uuid())
  createDate   DateTime      @default(now())
  endDate      DateTime?
  transactions Transaction[] @relation("ContactTransactions")
  name         String
  phone        String
  email        String        @unique
  type         TypeContact   @default(individual)
  document     String        @unique
  is_active    Boolean
  address      Address    @relation("AddressContact", fields: [addressId], references: [id])
  addressId    String
}

model Category {
  id           String           @id @default(uuid())
  createDate   DateTime      @default(now())
  endDate      DateTime?
  type         TypeCategory @default(expense)
  isActive     Boolean      @default(true)
  name         String       @unique
  transactions Transaction[] @relation("CategoryTransaction")
}

model Address {
  id           String           @id @default(uuid())
  createDate   DateTime         @default(now())
  endDate      DateTime?
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  postalCode  String
  country      String
  complement   String?
  isPrimary   Boolean
  Contact Contact[] @relation("AddressContact")
}

enum Recurrence {
  W
  M
  D
  B
}

enum TypeCategory {
 expense
 income
}
 
enum TypeContact {
  individual
  company
}
